@model IEnumerable<Police_Station.Models.PoliceOfficer>

@{
    ViewData["Title"] = "Index";
}


<div class="card mt-2 mb-2">
    <div class="card-header">
        <h2 class="alert alert-success text-center">Police Information</h2>
        <div class="d-flex justify-content-end">
            <a asp-action="Create" class="btn btn-success"><i class="fa fa-plus"></i> Add New</a>
        </div>
    </div>

    <div class="card-body">
        <table class="table table-striped table-bordered text-center align-middle">
            <thead class="table-success">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.BadgeNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateOfBirth)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Rank)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BadgeType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.JoinDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Salary)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Shift)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Supervisor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Department)
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.BadgeNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateOfBirth)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Rank)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BadgeType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.JoinDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Salary)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Shift)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Supervisor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Department)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.PoliceOfficerId" class="btn btn-warning btn-sm me-2"><i class="fa fa-edit"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.PoliceOfficerId" class="btn btn-danger btn-sm me-2"><i class="fa fa-trash"></i></a>
                            <a asp-action="Details" asp-route-id="@item.PoliceOfficerId" class="btn btn-info btn-sm"><i class="fa fa-eye"></i></a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>

</div>
