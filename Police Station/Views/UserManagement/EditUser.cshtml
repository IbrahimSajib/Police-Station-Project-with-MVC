@model UserVM

@{
    ViewBag.Title = "Edit User";
}


<div style="max-width:440px; margin-top:50px;" class="mx-auto">
    <section>
        <form asp-action="EditUser" method="post">
            <h1>Update User!</h1>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <label asp-for="Email" class="form-label"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div>
                <button type="submit" class="w-100 btn btn-lg" style="background-color:#FFC833;">Update</button>
            </div>
        </form>
        <div class="d-flex justify-content-start">
            <a asp-action="UserList" class="btn btn-link btn-sm text-decoration-none"><i class="fa fa-arrow-circle-o-left"></i> Back to List</a>
        </div>
    </section>
</div>