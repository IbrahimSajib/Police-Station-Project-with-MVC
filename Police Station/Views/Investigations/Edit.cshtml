@model Police_Station.Models.InvestigationInfo

@{
    ViewData["Title"] = "Edit";
}

<form asp-action="Edit">
    <div class="row">
        <div class="col-7 mx-auto">
            <div class="card">
                <div class="card-header text-center alert alert-warning">
                    <h3>Update Investigation Information</h3>
                </div>
                <div class="card-body ms-2">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="InvestigationInfoId" />
                    <div class="row mb-2">
                        <div class="col-3">
                            <label asp-for="StartDate" class="col-form-label"></label>
                        </div>
                        <div class="col-5">
                            <input asp-for="StartDate" class="form-control" type="date" />
                        </div>
                        <div class="col-4">
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-3">
                            <label asp-for="EndDate" class="col-form-label"></label>
                        </div>
                        <div class="col-5">
                            <input asp-for="EndDate" class="form-control" type="date" />
                        </div>
                        <div class="col-4">
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-3">
                            <label asp-for="Status" class="col-form-label"></label>
                        </div>
                        <div class="col-5">
                            <input asp-for="Status" class="form-control" />
                        </div>
                        <div class="col-4">
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="row mb-2">
                        <div class="col-3">
                            <label asp-for="Location" class="col-form-label"></label>
                        </div>
                        <div class="col-5">
                            <input asp-for="Location" class="form-control" />
                        </div>
                        <div class="col-4">
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>
                    </div>



                    <div class="row mb-2">
                        <div class="col-3">
                            <label asp-for="Details" class="col-form-label"></label>
                        </div>
                        <div class="col-5">
                            <input asp-for="Details" class="form-control" />
                        </div>
                        <div class="col-4">
                            <span asp-validation-for="Details" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="row mb-2">
                        <div class="col-3">
                            <label asp-for="CaseApplicationId" class="col-form-label"></label>
                        </div>
                        <div class="col-5">
                            <input asp-for="CaseApplicationId" class="form-control" />
                        </div>
                        <div class="col-4">
                            <span asp-validation-for="CaseApplicationId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-3">
                            <label asp-for="PoliceOfficerId" class="col-form-label"></label>
                        </div>
                        <div class="col-5">
                            <select asp-for="PoliceOfficerId" class="form-control" asp-items="ViewBag.PoliceOfficerId">
                                <option value="">---Select----</option>
                            </select>
                        </div>
                        <div class="col-4">
                            <span asp-validation-for="PoliceOfficerId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="offset-3">
                        <input type="submit" value="Update Data" class="btn btn-success" />
                    </div>

                </div>

                <div class="card-footer">
                    <div class="d-flex justify-content-start">
                        <a asp-action="Index" class="btn btn-link btn-sm text-decoration-none"><i class="fa fa-arrow-circle-left"></i> Back to List</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>
