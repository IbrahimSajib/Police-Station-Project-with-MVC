@model Police_Station.Models.Prison

@{
    ViewData["Title"] = "Delete";
}


<div class="card row col-lg-8 mx-auto mt-3">
    <h1 class=" card-header alert alert-danger">Are you sure you want to delete this?</h1>
    <div class="card-body mx-4">

        <div class="row mb-2">
            <div class="col-2">
                <b>@Html.DisplayNameFor(model => model.PrisonName) :</b>
            </div>
            <div class="col-5">
                @Html.DisplayFor(model => model.PrisonName)
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-2">
                <b>@Html.DisplayNameFor(model => model.Location) :</b>
            </div>
            <div class="col-5">
                @Html.DisplayFor(model => model.Location)
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-2">
                <b>@Html.DisplayNameFor(model => model.Capacity) :</b>
            </div>
            <div class="col-5">
                @Html.DisplayFor(model => model.Capacity)
            </div>
        </div>

        <div class="row mb-2">
            <div class="col-2">
                <b>@Html.DisplayNameFor(model => model.ContactInfo) :</b>
            </div>
            <div class="col-5">
                @Html.DisplayFor(model => model.ContactInfo)
            </div>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="PrisonId" />
            <div class="row">
                <div class="offset-2">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            </div>
        </form>
    </div>
    <div class="card-footer">
        <div class="d-flex justify-content-start">
            <a asp-action="Index" class="btn btn-link btn-sm text-decoration-none"><i class="fa fa-arrow-circle-left"></i> Back to List</a>
        </div>
    </div>
</div>
