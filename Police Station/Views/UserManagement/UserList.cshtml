@model IEnumerable<IdentityUser>
@{
    ViewData["Title"] = "UserList";
}

<h1 class="alert alert-success text-center">List of Users</h1>

@if (Model.Any())
{
    <div class="d-flex justify-content-end mb-3">
        <a class="btn btn-success" asp-action="Register" asp-controller="Account"><i class="fa fa-plus"></i> Add new User</a>
    </div>
    <table class="table table-striped table-bordered ">
        <thead class="text-center table-success">
            <tr>
                <th>User Email</th>
                <th colspan="3">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td class="text-center" width="40%">@user.Email</td>
                    <td class="text-end">
                        <a asp-controller="UserManagement" asp-action="ManageRolesOfUser" asp-route-userId="@user.Id" class="btn btn-info">Manage Roles <i class="fa fa-sliders"></i></a>
                    </td>
                    <td width="70">
                        <a asp-controller="UserManagement" asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-warning"> Edit</a>
                    </td>
                    <td width="300">
                        <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                            <span id="deleteSpan_@user.Id">
                                <a class=" btn btn-danger" onclick="confirmDelete('@user.Id', true)">Delete</a>
                            </span>
                            <span id="confirmDeleteSpan_@user.Id" style="display:none">
                                <p>Are you sure you want to delete?</p>
                                <button type="submit" class="btn btn-danger">Yes</button>
                                <a class="btn btn-primary" onclick="confirmDelete('@user.Id', false)">No</a>
                            </span>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="card">
        <div class="card-header">
            No user created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a user
            </h5>
            <a class="btn" style="width:auto; background-color:#FFC833;" asp-controller="Account" asp-action="Register">Create User</a>
        </div>
    </div>
}


@section Scripts {
    <script src="~/js/site.js"> </script>
}

