@model IEnumerable<Police_Station.Models.CaseApplication>

@{
    ViewData["Title"] = "Index";
}


<div class="card mt-2 mb-2">
    <div class="card-header">
        <h2 class="alert alert-success text-center">Case Application List</h2>
        <div class="d-flex justify-content-end">
            <a asp-action="Create" class="btn btn-success"><i class="fa fa-plus"></i> Add New</a>
        </div>
    </div>

    <div class="card-body">
        <table class="table table-striped table-bordered text-center align-middle">
            <thead class="table-success">
                <tr>
                    <th>
                            @Html.DisplayNameFor(model => model.VictimName)
                    </th>
                    <th>
                            @Html.DisplayNameFor(model => model.VictimAddress)
                    </th>
                    <th>
                            @Html.DisplayNameFor(model => model.VictimPhoneNo)
                    </th>
                    <th>
                            @Html.DisplayNameFor(model => model.SuspectName)
                    </th>
                    <th>
                            @Html.DisplayNameFor(model => model.SuspectPhoneNo)
                    </th>
                    <th>
                            @Html.DisplayNameFor(model => model.WitnessName)
                    </th>
                    <th>
                            @Html.DisplayNameFor(model => model.WitnessPhoneNo)
                    </th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.VictimName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VictimAddress)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VictimPhoneNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SuspectName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SuspectPhoneNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.WitnessName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.WitnessPhoneNo)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.CaseApplicationId" class="btn btn-warning btn-sm me-2"><i class="fa fa-edit"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.CaseApplicationId" class="btn btn-danger btn-sm me-2"><i class="fa fa-trash"></i></a>
                            <a asp-action="Details" asp-route-id="@item.CaseApplicationId" class="btn btn-info btn-sm"><i class="fa fa-eye"></i></a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>

</div>
