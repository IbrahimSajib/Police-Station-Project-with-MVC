@model RoleVM
@{
    ViewData["Title"] = "EditRole";
}


<div style="max-width:440px; margin-top:50px;" class="mx-auto">
    <section>
        <form asp-action="EditRole" method="post">
            <h1>Update Role!</h1>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="RoleName" class="form-control" placeholder="RoleName" />
                <label asp-for="RoleName" class="form-label"></label>
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div>
                <button type="submit" class="w-100 btn btn-lg" style="background-color:#FFC833;">Update</button>
            </div>
        </form>
        <div class="d-flex justify-content-start">
            <a asp-action="RoleList" class="btn btn-link btn-sm text-decoration-none"><i class="fa fa-arrow-circle-o-left"></i> Back to List</a>
        </div>
    </section>
</div>