@model Police_Station.Models.Criminal

@{
    ViewData["Title"] = "Edit";
}


<form asp-action="Edit">
    <div class="row">
        <div class="col-7 mx-auto">
            <div class="card">
                <div class="card-header text-center alert alert-warning">
                    <h3>Update Criminal Info</h3>
                </div>
                <div class="card-body ms-2">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="CriminalId" />
                    <div class="row mb-2">
                        <div class="col-3">
                            <label asp-for="Name" class="col-form-label"></label>
                        </div>
                        <div class="col-5">
                            <input asp-for="Name" class="form-control" />
                        </div>
                        <div class="col-4">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-3">
                            <label asp-for="Age" class="col-form-label"></label>
                        </div>
                        <div class="col-5">
                            <input asp-for="Age" class="form-control" />
                        </div>
                        <div class="col-4">
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-3">
                            <label asp-for="Gender" class="col-form-label"></label>
                        </div>
                        <div class="col-5">
                            <select asp-for="Gender" class="form-control">
                                <option value="">---Select---</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>
                        <div class="col-4">
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-3">
                            <label asp-for="Status" class="col-form-label"></label>
                        </div>
                        <div class="col-5">
                            <input asp-for="Status" class="form-control" />
                        </div>
                        <div class="col-4">
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="row mb-2">
                        <div class="col-3">
                            <label asp-for="CaseApplicationId" class="col-form-label"></label>
                        </div>
                        <div class="col-5">
                            <input asp-for="CaseApplicationId" class="form-control" />
                        </div>
                        <div class="col-4">
                            <span asp-validation-for="CaseApplicationId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="offset-3">
                        <input type="submit" value="Update Data" class="btn btn-success" />
                    </div>

                </div>

                <div class="card-footer">
                    <div class="d-flex justify-content-start">
                        <a asp-action="Index" class="btn btn-link btn-sm text-decoration-none"><i class="fa fa-arrow-circle-left"></i> Back to List</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>